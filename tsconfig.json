{
    "compilerOptions": {
        "outDir": "dist",
        "lib": ["dom","dom.iterable","esnext"],
        "module": "CommonJS",
        "target": "ES2019",
        "esModuleInterop": true,
        "strictNullChecks": false,
        "moduleResolution": "node",
        "resolveJsonModule": true,
        "sourceMap": true,
        "allowSyntheticDefaultImports": true,
        "rootDir": "src",
        "baseUrl": "src",
        "jsx": "react",
        "paths": {
            "@/*":["*"]
        },
        "allowJs": true,
        
    },
    "include": [
        "src"
    ],
    "exclude": [
        "src/main/test/cypress"
    ]
}
